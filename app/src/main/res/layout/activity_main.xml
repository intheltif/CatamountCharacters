<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/wcu_purple_gold_gradient"
    tools:context=".MainActivity">

    <!-- TODO: TextView text colors need swapped. Do not look good currently -->

    <TextView
        style="@style/Collegiate"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:textSize="50sp"
        android:textColor="@color/wcu_gold"
        android:text="@string/catamount" />

    <TextView
        style="@style/Collegiate"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="@color/wcu_purple"
        android:text="@string/characters" />
</LinearLayout>