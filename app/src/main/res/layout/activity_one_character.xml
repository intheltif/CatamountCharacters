<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/wcu_purple_gold_gradient"
tools:context=".TwoCharactersActivity">

    <TextView
        android:id="@+id/text_one_char_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="@dimen/title_text"
        android:text="Choose One Character" />

    <TextView
        android:id="@+id/text_one_char_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_one_char_title"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="@dimen/subtitle_text"
        android:text="Enter an alpha numeric character" />

    <TextView
        android:id="@+id/text_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/edit_char"
        android:textAlignment="center"
        android:textSize="@dimen/subtitle_text"
        android:text="Enter Character" />

    <EditText
        android:id="@+id/edit_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:hint="Enter Character"/>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_char"
        android:textSize="@dimen/subtitle_text"
        android:text="GO >" />

</RelativeLayout>