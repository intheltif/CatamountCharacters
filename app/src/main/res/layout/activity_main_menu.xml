<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wcu_purple"
    tools:context=".MainMenuActivity">

    <TextView
        style="@style/Collegiate"
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/subtitleTextView"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/wcu_gold"
        android:textSize="@dimen/title_text" />


    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/oneCharacterBtn"
        android:text="@string/subtitle_main_menu"
        android:textAlignment="center"
        android:textColor="@color/wcu_gold"
        android:textSize="@dimen/subtitle_text" />

    <Button
        android:id="@+id/oneCharacterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/twoCharBtn"
        android:onClick="buttonClicked"
        android:text="One Character" />

    <Button
        android:id="@+id/twoCharBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="buttonClicked"
        android:text="Two Characters" />

    <Button
        android:id="@+id/imgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/twoCharBtn"
        android:onClick="buttonClicked"
        android:text="Image" />

    <Button
        android:id="@+id/infoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonClicked"
        android:text="Info" />

</RelativeLayout>